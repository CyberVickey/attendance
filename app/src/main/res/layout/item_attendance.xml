<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:padding="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_stdName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="김학생"
            android:textSize="28sp"
            android:padding="6dp"
            />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14:02 ~"
            android:layout_marginTop="4dp"
            android:layout_below="@id/tv_stdName"/>

        <TextView
            android:id="@+id/tv_attendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="출석"
            android:textStyle="bold"
            android:textColor="#00C570"
            android:textSize="22sp"
            android:layout_toLeftOf="@+id/iv_email"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            />

        <TextView
            android:id="@+id/tv_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="종료"
            android:textStyle="bold"
            android:textColor="@color/myColorDark"
            android:textSize="22sp"
            android:layout_toLeftOf="@+id/iv_email"
            android:layout_below="@+id/tv_attendance"
            android:layout_marginRight="8dp"
            />

        <TextView
            android:id="@+id/tv_absent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="결석"
            android:textStyle="bold"
            android:textColor="#D1281B"
            android:textSize="22sp"
            android:layout_toLeftOf="@+id/tv_attendance"
            android:layout_marginRight="8dp"
            android:layout_marginTop="20dp"
            />

        <ImageView
            android:id="@+id/iv_email"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:outlineProvider="background"
            android:layout_alignParentRight="true"
            android:src="@android:drawable/ic_dialog_email"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            />


    </RelativeLayout>

</androidx.cardview.widget.CardView>