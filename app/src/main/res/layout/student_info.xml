<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="등록일 : 2020 / 07/ 10"
        android:layout_alignParentRight="true"

        />

    <TextView
        android:id="@+id/tv_nameInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="홍길동"
        android:textColor="#FF111111"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="22dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="?attr/fabSize"
        android:layout_height="?attr/fabSize"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        />

    <ToggleButton
        android:id="@+id/tb_mon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/toggle_selector"
        android:enabled="true"

        android:textOn="월"
        android:textOff="월"

        android:textColor="#FF000000"
        android:layout_below="@+id/tv_nameInfo"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="20dp"
        />

    <ToggleButton
        android:id="@+id/tb_tue"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/toggle_selector"
        android:enabled="true"

        android:textOn="화"
        android:textOff="화"

        android:textColor="#FF000000"
        android:layout_toRightOf="@+id/tb_mon"
        android:layout_below="@+id/tv_nameInfo"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="12dp"
        />

    <ToggleButton
        android:id="@+id/tb_wed"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/toggle_selector"
        android:enabled="true"

        android:textOn="수"
        android:textOff="수"

        android:textColor="#FF000000"
        android:layout_toRightOf="@+id/tb_tue"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="12dp"
        android:layout_below="@+id/tv_nameInfo"
        />

    <ToggleButton
        android:id="@+id/tb_thu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/toggle_selector"
        android:enabled="true"

        android:textOn="목"
        android:textOff="목"

        android:textColor="#FF000000"
        android:layout_toRightOf="@+id/tb_wed"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="12dp"
        android:layout_below="@+id/tv_nameInfo"
        />

    <ToggleButton
        android:id="@+id/tb_fri"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/toggle_selector"
        android:enabled="true"

        android:textOn="금"
        android:textOff="금"

        android:textColor="#FF000000"
        android:layout_toRightOf="@+id/tb_thu"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="12dp"
        android:layout_below="@+id/tv_nameInfo"
        />

    <ToggleButton
        android:id="@+id/tb_sat"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/toggle_selector"
        android:theme="@style/customTheme"
        android:enabled="true"

        android:textOn="토"
        android:textOff="토"

        android:textColor="#FF000000"
        android:layout_toRightOf="@+id/tb_fri"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="12dp"
        android:layout_below="@+id/tv_nameInfo"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tb_fri"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_editbox"
        android:layout_marginHorizontal="10dp"
        android:padding="16dp"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:layout_marginVertical="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="생년월일"
                android:layout_marginVertical="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="연락처"
                android:layout_marginVertical="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="보호자1"
                android:layout_marginVertical="20dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="홍길동"
                android:layout_marginVertical="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020 / 07 / 10"
                android:layout_marginVertical="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="없음"
                android:layout_marginVertical="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아버지"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="010-1234-5678"
                />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>