<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#BDBDBD"
        android:layout_below="@id/linlayout"/>

    <LinearLayout
        android:id="@+id/linlayout"
        android:layout_width="wrap_content"
        android:layout_height="79dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_stdListName"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="2dp"
            android:text="김학생"
            android:textSize="20sp"
            android:layout_marginHorizontal="20dp"
            android:gravity="center_vertical"
            />

    </LinearLayout>


    <ToggleButton
        android:id="@+id/tb_mon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/toggle_selector"
        android:enabled="true"

        android:textOn="월"
        android:textOff="월"
        android:layout_toRightOf="@+id/linlayout"
        android:textColor="#FF000000"
        android:layout_below="@+id/tv_nameInfo"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="20dp"
        />

    <ToggleButton
        android:id="@+id/tb_tue"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/toggle_selector"
        android:enabled="true"

        android:textOn="화"
        android:textOff="화"

        android:textColor="#FF000000"
        android:layout_toRightOf="@+id/tb_mon"
        android:layout_below="@+id/tv_nameInfo"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="12dp"
        />

    <ToggleButton
        android:id="@+id/tb_wed"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/toggle_selector"
        android:enabled="true"

        android:textOn="수"
        android:textOff="수"

        android:textColor="#FF000000"
        android:layout_toRightOf="@+id/tb_tue"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="12dp"
        android:layout_below="@+id/tv_nameInfo"
        />

    <ToggleButton
        android:id="@+id/tb_thu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/toggle_selector"
        android:enabled="true"

        android:textOn="목"
        android:textOff="목"

        android:textColor="#FF000000"
        android:layout_toRightOf="@+id/tb_wed"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="12dp"
        android:layout_below="@+id/tv_nameInfo"
        />

    <ToggleButton
        android:id="@+id/tb_fri"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/toggle_selector"
        android:enabled="true"

        android:textOn="금"
        android:textOff="금"

        android:textColor="#FF000000"
        android:layout_toRightOf="@+id/tb_thu"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="12dp"
        android:layout_below="@+id/tv_nameInfo"
        />

    <ToggleButton
        android:id="@+id/tb_sat"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/toggle_selector"
        android:theme="@style/customTheme"
        android:enabled="true"

        android:textOn="토"
        android:textOff="토"

        android:textColor="#FF000000"
        android:layout_toRightOf="@+id/tb_fri"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="12dp"
        android:layout_below="@+id/tv_nameInfo"
        />


</RelativeLayout>

