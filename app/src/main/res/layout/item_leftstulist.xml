<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:padding="8dp"
    >

    <TextView
        android:id="@+id/leaving_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="김학생"
        android:textSize="20sp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="6dp"
        />

    <TextView
        android:id="@+id/leaving_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="2020/ 07/ 17"
        android:layout_below="@+id/leaving_name"
        android:layout_alignStart="@+id/leaving_name"
        android:layout_marginTop="8dp"
        />

    <Button
        android:id="@+id/btn_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="삭제"
        android:textColor="#FFFFFFFF"
        android:backgroundTint="@color/myColorDeepdark"
        android:layout_toLeftOf="@+id/btn_recover"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6dp"
        />

    <Button
        android:id="@+id/btn_recover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="복원"
        android:layout_alignParentRight="true"
        android:layout_marginTop="6dp"
        android:layout_marginRight="10dp"
        />

    <view
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cardview_dark_background"
        android:layout_alignParentBottom="true"

        />

</RelativeLayout>